{% extends '::base.html.twig' %}

{% block body %}
    <p class="col-lg-2 col-lg-offset-5 col-md-2 cold-md-offset-5 classement">Classement</p>
    <div class="classementligne">
        {% for user in classement %}
            <p class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">#{{ loop.index }}
                - {{ user.username }} - {{ user.score }}</p>
        {% endfor %}
    </div>
{% endblock %}