{% extends 'base_dev.html.twig' %}

{% block body %}
    <h1>Espace joueur : {{ user.username }}</h1>
    <h2>Mes parties en cours</h2>

    <div>
        <ul>
            {% set i = 0 %}
            {% for parties in user.parties %}
                {% for partie in parties %}
                    {% if partie is not empty %}
                        <li>Partie avec : <a href="{{ path('afficher_partie', {'id': partie.id}) }}">
                                {% if partie.users1.username != user.username %}
                                    {{ partie.users1.username }}
                                {% else %}
                                    {{ partie.users2.username }}
                                {% endif %}

                            </a> - tour de : {{ partie.partieTour }}</li>
                        {% set i = i + 1 %}
                    {% endif %}
                {% endfor %}
            {% endfor %}

            {% if i == 0 %}
                Aucune partie en cours. <a href="{{ path('joueur_parties_add') }}">CrÃ©er une partie</a>
            {% endif %}
        </ul>
    </div>


    <a href="{{ path('joueur_homepage') }}">Retour</a>
{% endblock %}