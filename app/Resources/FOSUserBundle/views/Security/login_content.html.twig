{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="col-md-offset-4 col-md-4 form_co">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" placeholder="Votre nom" name="_username" value="{{ last_username }}"
               required="required"/>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control" id="password" placeholder="Votre password" name="_password" required="required"/>
    </div>

    <div class="checkbox">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>{{ 'security.login.remember_me'|trans }}
        </label>
    </div>
    <button type="submit" id="_submit" name="_submit" class="btn btn-default col-md-offset-5">{{ 'security.login.submit'|trans }}</button>
</form>
